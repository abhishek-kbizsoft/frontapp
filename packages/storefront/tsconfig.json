{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2022",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "preserveWatchOutput": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "jsx": "react"
  },
  "include": ["./src"]
}
