{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "ES2022",
    "outDir": "./dist",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "preserveWatchOutput": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "src/**/*.test.tsx"]
}
